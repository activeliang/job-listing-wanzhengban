<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, class:  "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
   <td>
     <%= render_job_status(job) %>
     <%= link_to(job.title, admin_jobs_path(job), class: "btn btn-primary") %>
   </td>
   <td>
     <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-primary") %>
     <%= link_to("Destroy", admin_job_path(job), class: "btn btn-primary", :method => :delete, :data => { :confirm => "Are you sure?"}) %>
   </td>
   <td>
     <%= job.created_at %>
   </td>


  </tr>
  <% end %>
</table>
